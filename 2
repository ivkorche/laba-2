#include <stdio.h>
#include <conio.h>
int main (void)
{
	float S=0;
	float a;
	float x;
	float b;

	int i;
	int n;

	printf ("n = ");
	scanf ("%d", &n);

	printf ("x = ");
	scanf ("%f", &x);
	i=2;
	b=x;
	a=1/x;
	while (i<=n)
	{

		S=S+a;
		b=b*x;
		a=i/b;
		i=i+1;
	}
	printf ("S = %f\n", S);
	getch ();


	return 0;
}

